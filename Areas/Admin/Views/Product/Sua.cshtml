@model ArtShop.Models.ViewModels.ProductViewModel
@using ArtShop.Extensions

@{
    ViewData["Title"] = "Cập nhật";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="pb-100"></div>
<br />
<h2 class="text-info">Cập nhật sản phẩm</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <div class="border bg-1">
        <input type="hidden" asp-for="Product.ProductId" />
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Product.ProductName" class="control-label">Tên sản phẩm:</label>
                    <input asp-for="Product.ProductName" class="form-control" />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Description" class="control-label">Mô tả:</label>
                    <textarea style="width:400px; height:300px;" asp-for="Product.Description" class="form-control"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label">Giá tiền:</label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label asp-for="Product.ImgUrl" class="control-label">Hình ảnh:</label>
                    <div>
                        <img src="@Model.Product.ImgUrl" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9" />
                    </div>
                    <a asp-for="ImgUrl">
                        <input asp-for="Product.ImgUrl" class="form-control" type="file" name="files" multiple />
                    </a>
                    <span asp-validation-for="Product.ImgUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product.Status" class="control-label">Tình trạng hiển thị:</label>

                    <select disabled asp-for="Product.Status" asp-items="Html.GetEnumSelectList<Product.EStatus>()" class="form-control"></select>
                    <span asp-validation-for="Product.Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product.CategoryId" class="control-label">Danh mục:</label>
                    <select asp-for="@Model.Product.CategoryId" id="CategoryId" asp-items="Model.CategoryList1" class="form-control"></select>
                </div>
                <partial name="_EditAndBackBtnPartial" model="Model.Product.ProductId"/>
            </div>
        </div>
    </div>
</form>
