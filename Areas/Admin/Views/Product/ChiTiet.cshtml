<div class="row">
    <div class="col-md-4">
        <form asp-action="ChiTiet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductId" class="form-control" />
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label">Tên danh mục:</label>
                <input asp-for="Product.ProductName" class="form-control" readonly />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.ImgUrl" class="col-form-label">Hình ảnh:</label>
                <span asp-validation-for="Product.ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@Model.Product.ImgUrl" sizes="100%"/>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label">Mô tả:</label>
                <textarea style="width:400px; height:300px;" asp-for="Product.Description" class="form-control" readonly></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price" class="control-label">Tên danh mục:</label>
                <input asp-for="Product.Price" class="form-control" readonly />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Status" class="col-form-label"></label>
                <select asp-for="Product.Status" asp-items="Html.GetEnumSelectList<Product.EStatus>()" disabled class="form-control"></select>
                <span asp-validation-for="Product.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label">Tên danh mục:</label>
                <select asp-for="@Model.Product.CategoryId" id="CategoryId" asp-items="Model.Category.ToSelectListItem(Model.Product.CategoryId)" disabled class="form-control"></select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <partial name="_DetailAndBackBtnPartial" model="Model.Product.ProductId" />
        </form>
    </div>
</div>