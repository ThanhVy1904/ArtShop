@model IEnumerable<Product>

@{
    ViewData["Title"] = "Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <form method="get">
        <div class="pb-150"></div>
        <h2 class="text-info">Quản lý sản phẩm</h2>
        <div>
            <div>
                <br />
                <div class="border bg-1 Padding10">
                    <div class="row">
                        <div class="col-lg-3">
                            @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @placeholder = "Tìm kiếm theo tên..." } })
                        </div>
                        <div class="col-lg-3">
                            <button type="submit" name="submit" value="Search" class="btn btn-info form-control">Tìm kiếm</button>
                        </div>
                        <div class="col-lg-6 text-right">
                            <partial name="_ThemPartial" />
                        </div>
                    </div>
                    <br />
                    <hr />
                    <div>
                        @if (Model.Count() > 0)
                        {
                            <table class="table table-striped border">
                                <tr class="table-secondary">
                                    <th>
                                        <p>Tên sản phẩm</p>
                                    </th>
                                    <th>
                                        <p>Danh mục</p>
                                    </th>
                                    <th>
                                        <p>Giá tiền</p>
                                    </th>

                                    <th></th>
                                    <th></th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(m => item.ProductName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.Category.CategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(m => item.Price)
                                        </td>

                                        <td>
                                            <partial name="_TableBtnPPartial" model="item.ProductId" />
                                        </td>
                                    </tr>
                                }
                            </table>
                        }
                        else
                        {
                            <p>Không có sản phẩm tồn tại...</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>